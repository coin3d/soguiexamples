  "#Inventor V2.1 ascii",
  "",
  "Separator {",
  "  DirectionalLight {",
  "    intensity 0.8",
  "  }",
  "  DEF c Callback { }",
  "  Rotor {",
  "    rotation 0 1 0 1",
  "    speed 0.03",
  "  }",
  "  DEF t1 Translation {",
  "    translation 0 0 0",
  "  }",
  "  DEF p1 ClipPlane {",
  "    plane 1 0 0 1",
  "    on TRUE",
  "  }",
  "  DEF t2 Translation {",
  "    translation 0 0 0",
  "  }",
  "  DEF p2 ClipPlane {",
  "    plane -1 0 0 1",
  "    on TRUE",
  "  }",
  "  DEF t3 Translation {",
  "    translation 0 0 0",
  "  }",
#include <simlogo.h>
  "}",
  NULL

/*
 * This example shows the approximately minimum amount of code
 * necessary to subclass the So@Gui@Viewer class.
 */

#include <Inventor/nodes/SoSeparator.h>
#include <Inventor/nodes/SoPerspectiveCamera.h>
#include <Inventor/nodes/SoCone.h>

#include <Inventor/@Gui@/So@Gui@.h>
#include <Inventor/@Gui@/viewers/So@Gui@Viewer.h>

// *************************************************************************

class SubclassViewer : public So@Gui@Viewer {
public:
  SubclassViewer(@WIDGET@ parent) :
    So@Gui@Viewer(parent, NULL, TRUE, BROWSER, TRUE) { }
  ~SubclassViewer( ) { }
};

// *************************************************************************

int
main(
  int argc,
  char ** argv )
{
  @WIDGET@ window = So@Gui@::init( argv[0] );
  if ( window == NULL )
    return -1;

  SoNode * root = new SoCone;

  SubclassViewer * viewer = new SubclassViewer( window );
  viewer->setSceneGraph( root );
  viewer->getCamera()->viewAll( root, viewer->getViewportRegion() );
  viewer->show();

  So@Gui@::show( window );
  So@Gui@::mainLoop();

  delete viewer;

  return 0;
} // main()


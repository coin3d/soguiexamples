#include <Inventor/errors/SoDebugError.h>
#include <Inventor/SoOutput.h>
#include <Inventor/nodes/SoMaterial.h>
#include <Inventor/actions/SoWriteAction.h>

#include <Inventor/@Gui@/So@Gui@.h>
#include <Inventor/@Gui@/So@Gui@MaterialList.h>

// *************************************************************************

void
materiallist_cb(
  void * closure,
  const SoMaterial * material )
{
  fprintf( stdout, "SELECTION: ==========================================\n" );
  SoOutput  * out = new SoOutput;
  out->setFilePointer( stdout );
  SoWriteAction writer( out );
  writer.apply( (SoNode *) material );
  delete out;
} // materiallist_cb()

// *************************************************************************

int
main(
  int argc,
  char ** argv )
{
  @WIDGET@ window = So@Gui@::init( argv[0] );

  So@Gui@MaterialList * materials = new So@Gui@MaterialList( window );
  materials->addCallback( materiallist_cb );
  materials->show();

  So@Gui@::show( window );
  So@Gui@::mainLoop();

  delete materials;

  return 0;
} // main()

